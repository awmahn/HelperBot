<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_getting_error_code"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.awmahn.helperbot.GettingErrorCodeActivity">

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getting_Error_Code_No_Button"
        android:layout_alignRight="@+id/getting_Error_Code_No_Button"
        android:layout_alignEnd="@+id/getting_Error_Code_No_Button"
        android:layout_marginTop="53dp"
        android:id="@+id/getting_Error_Code_Back_Button" />

    <Button
        android:text="No"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/getting_Error_Code_No_Button"
        android:layout_below="@+id/getting_Error_Code_Yes_Button"
        android:layout_alignLeft="@+id/getting_Error_Code_Yes_Button"
        android:layout_alignStart="@+id/getting_Error_Code_Yes_Button" />

    <TextView
        android:text="Are you getting an error code?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="97dp"
        android:id="@+id/textView12"
        android:textSize="24sp"
        android:textColor="@android:color/background_dark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:id="@+id/getting_Error_Code_Yes_Button"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/troublebanner"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView10" />
</RelativeLayout>
