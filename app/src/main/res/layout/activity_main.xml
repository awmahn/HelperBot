<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.awmahn.helperbot.MainActivity"
    android:background="@android:color/background_light">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/troublebanner"
            android:id="@+id/imageView5"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Select an option to get started"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/createNewSearchButton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="26dp"
            android:id="@+id/textView20"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="normal|bold" />

        <Button
            android:text="New Search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/createNewSearchButton"
            android:onClick="createNewSearch"
            android:textSize="18sp"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/background_light"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loadSearchButton"
            android:text="Search History"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/background_light"
            android:layout_below="@+id/createNewSearchButton"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView33"
            android:layout_weight="0.93" />

        <TextView
            android:text="Created by Robert Curtis and Andrew Mahn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView34"
            android:textAlignment="center" />

    </LinearLayout>

</RelativeLayout>
