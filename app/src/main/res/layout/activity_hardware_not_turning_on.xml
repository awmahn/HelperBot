<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hardware_not_turning_on"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.awmahn.helperbot.hardwareNotTurningOn">

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/notTurnOnNoButton"
        android:layout_alignStart="@+id/notTurnOnNoButton"
        android:layout_marginBottom="28dp"
        android:id="@+id/notTurnOnBackButton" />

    <TextView
        android:text="Is the device plugged in?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView20"
        android:layout_centerHorizontal="true"
        android:id="@+id/textview_isPluggedIn"
        android:textSize="24sp"
        android:textColor="@android:color/background_dark" />

    <Button
        android:text="Yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notTurnOnYesButton"
        android:layout_below="@+id/notTurnOnDesc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <Button
        android:text="No"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notTurnOnNoButton"
        android:layout_below="@+id/notTurnOnYesButton"
        android:layout_alignLeft="@+id/notTurnOnYesButton"
        android:layout_alignStart="@+id/notTurnOnYesButton" />

    <TextView
        android:text="Check to see if the device is plugged into an outlet. Make sure the outlet is providing electricity by testing a device that is known to be working. In addition, check to make sure the power cable is firmly seated in the device."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notTurnOnDesc"
        android:textSize="16sp"
        android:layout_marginTop="13dp"
        android:textAlignment="center"
        android:layout_below="@+id/textview_isPluggedIn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/troublebanner"
        android:id="@+id/imageView20"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
