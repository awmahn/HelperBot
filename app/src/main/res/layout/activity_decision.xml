<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_decision"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.awmahn.helperbot.DecisionActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="87dp"
            app:srcCompat="@drawable/troublebanner"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView" />

        <TextView
            android:text="Please enter a name to remember the search by."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView23"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/decision_Name_EditText"
            android:hint="My Search Name"
            android:textAlignment="center" />

        <Button
            android:text="How Do I ... ?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/decision_How_Do_I_Button"
            android:layout_marginTop="15dp"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            android:textSize="18sp"
            android:textColor="@android:color/background_light"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/hardwareIssueButton"
            android:text="Hardware Issue"
            android:background="@color/colorPrimary"
            android:textSize="18sp"
            android:textColor="@android:color/background_light"
            android:layout_below="@+id/decision_How_Do_I_Button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="Software Issue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:id="@+id/softwareIssueButton"
            android:layout_below="@+id/hardwareIssueButton"
            android:background="@color/colorPrimary"
            android:textSize="18sp"
            android:textColor="@android:color/background_light"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView32"
            android:layout_weight="1.07" />

        <Button
            android:text="Back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:id="@+id/decision_back_button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            style="@android:style/Widget.Button.Inset"
            android:textSize="17sp" />

    </LinearLayout>

</RelativeLayout>
